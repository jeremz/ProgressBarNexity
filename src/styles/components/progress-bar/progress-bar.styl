.progress-bar-wrapper{
  margin-top: 10em
  display: flex
  justify-content: center

  .progress-bar-content{
    position relative
    margin: auto
    height: 3em
    width: 40em
    background-color: #DDD
    padding: 0.5em
    border-radius: 2em
    box-sizing: border-box
    text-align: center
    margin: 0 2em
    order: 2
    
    .progress-bar{
      position: relative
      height: 2em
      width: 100%
      border-radius: 2em
      z-index: 1
      overflow: hidden

      .progress-bar-fill{
        position: relative
        height: 100%
        width: 100%
        background: #00dcb3
        border-radius: 2em
        z-index: 1
      }
    }
    .progress-bar-text{
      position: relative
      line-height: 2em
      z-index: 2
      width: 100%
      margin-top: 2em
      color: #00dcb3

      p{
        font-size: 2em
      }
    }
  }

  button{
    position: relative
    width: 3em
    height: 3em
    border-radius: 3em
    color: #666
    border: none 
    background: #DDD 

    p{
      font-size: 1.5em
    }

    &.decrement{
      order: 1
    }

    &.increment{
      order: 3
    }

    &.update{
      order: 4
      width: auto
      padding: 0em 2em
      margin-left: 2em
    }
  }
}